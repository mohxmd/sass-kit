{
  "name": "@repo/foundation",
  "version": "0.0.1",
  "description": "Manage auth, database, schemas, and queries",
  "exports": {
    "./auth/*": {
      "default": "./dist/auth/*.js",
      "types": "./dist/auth/*.d.ts"
    },
    "./db/*": {
      "default": "./dist/db/*.js",
      "types": "./dist/db/*.d.ts"
    },
    "./zod-schema/*": {
      "default": "./dist/zod-schema/*.js",
      "types": "./dist/zod-schema/*.d.ts"
    },
    "./utils/*": {
      "default": "./dist/utils/*.js",
      "types": "./dist/utils/*.d.ts"
    },
    "./queries/*": {
      "default": "./dist/db/queries/*.js",
      "types": "./dist/db/queries/*.d.ts"
    },
    "./mutations/*": {
      "default": "./dist/db/mutations/*.js",
      "types": "./dist/db/mutations/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist && tsc-alias",
    "auth:generate": "mkdir -p src/db && npx @better-auth/cli@latest generate --config ./config/auth.ts --output ./src/db/schema/auth.sql.ts",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:pull": "drizzle-kit pull --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@polar-sh/better-auth": "^1.1.0",
    "@polar-sh/sdk": "^0.34.13",
    "better-auth": "^1.3.7",
    "drizzle-orm": "^0.44.4",
    "ws": "^8.18.3",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
